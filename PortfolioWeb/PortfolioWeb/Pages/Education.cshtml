@page
@model PortfolioWeb.Pages.EducationModel
@{
    ViewData["Title"] = "Education";
}


<div class="container" style="padding-left:inherit">

    <h1>@ViewData["Title"]</h1>
    <div class="education-body" style="text-align:justify">

        <p>
            I graduated from Arizona State University with a <b>B.S. Software Engineering</b> in May 2021.
        </p>
        <p>
            Click or tap below for more information:
        </p>
    </div>
    <div class="education-row">
        <div class="panel">
            <div class="edu-img">
                <img src="~/images/ASU Fulton Logo.png"
                     style="border-radius:0%; max-height:90px" alt="ASU Fulton School Logo" />
            </div>
        </div>
        <div class="panel-container">
            <div class="education-left">
                <ul style="padding-left:1em">
                    <li><b>School:</b> Ira A. Fulton Schools of Engineering</li>
                    <li><b>Degree:</b> B.S. Software Engineering</li>
                    <li><b>GPA:</b> 3.90 out of a maximum of 4.0</li>
                    <li><b>Graduated:</b> May 2021</li>
                    <li>
                        <b>Transcripts:</b><a href="~/data/Final_SSR_TSRPT.pdf"
                                              target="_blank" rel="noopener noreferrer"> View Current Transcripts</a>
                    </li>
                </ul>
            </div>

        </div>
        <div class="panel">
            <div class="edu-img">
                <img src="~/images/UP Logo.png"
                     style="border-radius:0%; max-height:100px" alt="Univ of Phoenix Logo" />
            </div>
        </div>
        <div class="panel-container">
            <div class="education-left">
                <ul style="padding-left:1em">
                    <li><b>Degree:</b> A.A. Psychology</li>
                    <li><b>GPA:</b> 3.73 out of a maximum of 4.0</li>
                    <li><b>Graduated:</b> March 2011</li>
                </ul>
            </div>
        </div>
    </div>
</div>

